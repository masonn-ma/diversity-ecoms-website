<!DOCTYPE html>

<html lang="en">

<head>
    <title>Forgot password</title>
    <%- include('../partials/head') %>

        <!-- CSS -->
        <link rel="stylesheet" href="/css/partials/common.css"> <!-- Common css -->
        <link rel="stylesheet" href="/css/partials/navbar.css"> <!-- Navbar css -->
        <link rel="stylesheet" href="/css/partials/footer.css"> <!-- Footer css -->

        <link rel="stylesheet" href="/css/site/forgot-password.css"> <!-- Created account css -->
</head>

<body>

    <!-- Header -->
    <header role="banner">
        <!-- Navbar -->
        <%- include('../partials/navbar') %>
    </header>

    <!-- Main -->
    <main role="main">
        <form method="POST" action="/forgot-password">
            <label for="email">Email: <span style="color:red">*</span></label>
            <input type="email" id="email" name="email">
            <div class="error"><%= errorMessage %></div>

            <button type="submit">Reset password</button>
        </form>
    </main>

    <!-- Footer -->
    <%- include('../partials/footer') %>

</body>

</html>